@{
    ViewData["Title"] = "Giải Phương Trình Bậc 1";
}

<div class="text-center">
    <h1 class="display-4">Giải Phương Trình Bậc 1</h1>
</div>
<div class="row justify-content-center mt-3">
    <form asp-action="" class="col-4">
        <div class="mb-3">
            <label for="a" class="form-label">Nhập giá trị của a:</label>
            <input type="number" class="form-control" id="a" name="a" required>
        </div>
      <div class="mb-3">
            <label for="b" class="form-label">Nhập giá trị của b:</label>
            <input type="number" class="form-control" id="b" name="b" required>
      </div>
      <button type="submit" class="btn btn-primary">Kết quả</button>
    </form>
</div>
<div class="text-center">
    <label><h3 style="color: red">Đáp án: @ViewBag.Result</h3></label>
</div>