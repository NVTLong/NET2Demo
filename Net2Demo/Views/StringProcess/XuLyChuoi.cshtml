<div class="text-center">
    <h1 class="display-4">Xử lý chuỗi dữ liệu</h1>
</div>
<div class="row justify-content-center mt-3">
    <form class="col-4" asp-action="XuLyChuoi">
        <div class="mb-3">
            <label class="form-label">Nhập giá trị của chuỗi:</label>
            <input type="text" class="form-control" name="strInput">
        </div>
      <button type="submit" class="btn btn-primary">Xử lý chuỗi</button>
    </form>
</div>
<div class="text-center">
    <label><h3 style="color: red">Kết quả nhận được: @ViewBag.ThongBao</h3></label>
</div>